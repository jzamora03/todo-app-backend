{
  "name": "todo-app-backend",
  "version": "1.0.0",
  "description": "Backend para aplicación de gestión de tareas - To-Do App",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --watchAll --verbose",
    "test:once": "jest --verbose --coverage",
    "setup": "npm install",
    "db:seed": "node scripts/seed.js",
    
    "docker:build": "docker build -t todo-app-backend .",
    "docker:run": "docker run -d --name todo-backend -p 5000:5000 --env-file .env todo-app-backend",
    "docker:stop": "docker stop todo-backend",
    "docker:rm": "docker rm todo-backend",
    "docker:logs": "docker logs -f todo-backend",
    "docker:shell": "docker exec -it todo-backend sh",
    "docker:restart": "npm run docker:stop && npm run docker:rm && npm run docker:build && npm run docker:run",
    "docker:clean": "docker system prune -af",
    
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "compose:logs:backend": "docker-compose logs -f backend",
    "compose:restart": "docker-compose down && docker-compose up -d --build",
    "compose:clean": "docker-compose down -v"
  },
  "keywords": ["nodejs", "express", "mongodb", "rest-api", "todo-app", "crud"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}